<%- include('./includes/head')%>
<%- include('./includes/nav')%>
  
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato abaixo</p>

          <%- include('includes/messages')%>
          
          <% if(contato._id){ %>
                <form class="formContato my-5" action="/contato/edit/<%= contato._id%>" method="POST">
          <%} else{%>
            <form class="formContato my-5" action="/contato/register" method="POST">
          <%}%>
                    <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                    <div class="mb-3">
                      <label >Nome</label>
                      <input value="<%- contato.nome %>" type="text" name="nome"  class="form-control nomeContato">
                      
                      <label >Sobrenome</label>
                      <input value="<%- contato.sobrenome%>"  type="text" name="sobrenome"  class="form-control sobrenomeContato">
                      
                      <label>Email</label>
                      <input value="<%- contato.email%>"  type="email" name="email"  class="form-control emailContato">
                      
                      <label>Telefone</label>
                      <input value="<%- contato.telefone%>"  type="tel" name="telefone"  class="form-control telefoneContato">
                      

                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
           


        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

 
<%- include('./includes/footer')%>

